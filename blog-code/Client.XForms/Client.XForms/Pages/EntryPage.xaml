<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Client.XForms.Pages.EntryPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout VerticalAlignment="Center"
                     Padding="20"
                     Spacing="20">
            <Button BackgroundColor="#44BFDF"
                    Command="{Binding LoginCommand}"
                    Text="Login"
                    TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>